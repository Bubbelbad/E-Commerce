@page
@using ECommerce.Models
@model ECommerce.Pages.ShopPage.ShopPageModel
@{
}
<div class="text-center">
    <h1 class="display-4 shop-header">Our products</h1>
</div>

<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Category
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="#">Action</a> <!-- Need a function to sort the couches by category here-->
        <a class="dropdown-item" href="#">Another action</a>
        <a class="dropdown-item" href="#">Something else here</a>
    </div>
</div>

@foreach (Product product in Model.products)
{
    <hr class="my-4">

    <div class="row mb-4 d-flex justify-content-between align-items-center">
        <div class="col-md-2 col-lg-2 col-xl-2">
            <a asp-page="/ProductPage/Product" asp-route-id="@product.Id"> 
                <img src="~/images/sofa1.png" class="img-fluid rounded-3" alt="@product.Description" />
            </a> <!-- IMAGE -->
        </div>
    </div>
}