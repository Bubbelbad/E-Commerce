@page
@model ECommerce.Pages.LoginPage.LoginModel
@{
}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Arizonia&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/index.css" style="text/css" />

<div class="text-center">
    <h1 class="display-4 shop-header">Log In</h1>
</div>

<hr class="my-4">
<form id="contactForm" class="form text-center" method="post" asp-page-handler="OnPost">
    <div class="form-container">
        <div>
            <input id="logIn-email" type="text" placeholder=" " type?"email" required="" name="logIn-email"><br>
            <label for="logIn-email">Email</label><br>
        </div>
        <br />
        <div>
            <input id="logIn-password" type="password" rows="10" placeholder=" " required="" name="logIn-password"></input>
            <br>
            <label for="logIn-password">Password</label><br>
        </div>
        <br />
        <br />
        @if (Model.LoginSuccessful == true)
        {
            <br />
            <div class="alert alert-success" role="alert">
                You have successfully logged in!
            </div>
            <br />
        }
        else
        {
            <br />
            <a class="fst-italic" asp-page="/SignUpPage/SignUp">Not a member yet? Sign up!</a>
            <br />
        }
        <button class="btn btn-dark btn-block btn-lg" id="signUp-submit" type="submit">Log In</button>
    </div>
</form>